---
import Section from "./ui/Section.astro";

const education = [
  {
    schoolName: "Malek Ashtar University",
    major: "M.S.c Telecomunication Engineering",
    duration: "2023 - 2025",
  },
  {
    schoolName: "Tabriz University",
    major: "B.C. Electrical Engineering",
    duration: " 2017 - 2022",
  },
  {
    schoolName: "Sampad",
    major: "High school diploma in Mathematics and Physics",
    duration: " 2012 -  2016",
  },
];
---

<Section title="education">
  <div class="flex flex-col gap-2">
    {
      education.map((e) => (
        <p class="flex gap-1">
          <span class="font-bold">{e.major},</span>
          <span class="italic">{e.schoolName}</span>
          <span class="ml-auto">{e.duration}</span>
        </p>
      ))
    }
  </div>
</Section>
